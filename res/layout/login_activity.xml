<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="3">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/textView2" android:layout_gravity="center_horizontal" android:textSize="28dp"
                android:layout_marginTop="40dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/catch_phrase"
                android:id="@+id/textView4" android:layout_gravity="center_horizontal" android:textSize="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_explanation"
                android:id="@+id/textView5" android:layout_gravity="center_horizontal" android:textSize="10dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:src="@drawable/login02"
                android:layout_marginTop="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1" android:background="#ffffff">
        <ImageButton
                android:layout_width="224dp"
                android:layout_height="76dp"
                android:id="@+id/imageButton" android:layout_gravity="center_horizontal"
                android:src="@drawable/facebooklogin" android:background="#00ffffff"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/facebook_login"
                android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textColor="#505050"
                android:paddingLeft="40dp" android:paddingRight="40dp" android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>